<Page
    x:Class="Test.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Test"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Margin="20">
        <TextBox x:Name="Name" Header="Name"/>
        <TextBox x:Name="Email" Header="Email" Margin="0 20 0 0"/>
        <TextBox x:Name="Phone" Header="Phone" Margin="0 20 0 0"/>
        <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
            <Button Content="Write File" Margin="0 0 20 0 " Click="Write_File"/>
            <Button Content="Read File" Click="Read_File"/>
        </StackPanel>

    </StackPanel>
</Page>
